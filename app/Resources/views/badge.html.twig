<?xml version="1.0"?>

{% set svgWidth = 120 %}
{% set titleWidth = 60 %}
{% set numX = 58 %}

<svg xmlns="http://www.w3.org/2000/svg" width="{{ svgWidth }}" height="20">

<rect width="{{ titleWidth }}" height="20" fill="#555"/>
<rect x="{{ numX }}" width="50" height="20" fill="{{ attribute(colors, badgeType) }}"/>

<rect rx="3" width="80" height="20" fill="transparent"/>
    <g fill="#fff" text-anchor="middle"
    font-family="DejaVu Sans,Verdana,Geneva,sans-serif" font-size="11">
        <text x="30" y="14">
            {% if badgeType == 'osx' %}
                {% set badgeType = 'mac os' %}
            {% endif %}
            {{ badgeType|default('Total')|capitalize }}
        </text>
        <text x="80" y="14">{{ num|default(0) }}</text>
    </g>
    Sorry, your browser does not support inline SVG.
</svg>
